<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="330.0" prefWidth="559.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="onlinechat.client.controllers.AuthWindowController">
   <children>
      <TextField fx:id="loginField" layoutX="108.0" layoutY="101.0" onAction="#focusToPasswordField" onKeyTyped="#setActiveEnterButton" prefHeight="65.0" prefWidth="437.0">
         <font>
            <Font size="30.0" />
         </font>
      </TextField>
      <Label layoutX="8.0" layoutY="107.0" prefHeight="53.0" prefWidth="96.0" text="Логин:">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label layoutX="8.0" layoutY="181.0" prefHeight="53.0" prefWidth="96.0" text="Пароль:">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordField" layoutX="108.0" layoutY="175.0" onAction="#doConnectionAndAuthentication" prefHeight="65.0" prefWidth="437.0">
         <font>
            <Font size="30.0" />
         </font></PasswordField>
      <Button fx:id="enterButton" disable="true" layoutX="108.0" layoutY="251.0" mnemonicParsing="false" onAction="#doConnectionAndAuthentication" prefHeight="53.0" prefWidth="162.0" text="Войти">
         <font>
            <Font size="30.0" />
         </font>
      </Button>
      <Label layoutX="8.0" layoutY="8.0" prefHeight="65.0" prefWidth="140.0" text="Адрес и порт сервера:" wrapText="true">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <TextField fx:id="serverHostField" layoutX="154.0" layoutY="8.0" onAction="#focusToPortField" prefHeight="65.0" prefWidth="294.0" text="localhost">
         <font>
            <Font size="30.0" />
         </font>
      </TextField>
      <TextField fx:id="serverPortField" layoutX="448.0" layoutY="8.0" onAction="#focusToLoginField" prefHeight="65.0" prefWidth="96.0" text="8081">
         <font>
            <Font size="28.0" />
         </font></TextField>
      <Label layoutX="8.0" layoutY="73.0" prefHeight="20.0" prefWidth="519.0" text="Если хост или порт не заполнены, то будет применено значение по-умолчанию">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <Button fx:id="registerButton" layoutX="280.0" layoutY="251.0" mnemonicParsing="false" onAction="#doRegisterNewUser" prefHeight="65.0" prefWidth="264.0" text="Зарегистрироваться" wrapText="true">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
