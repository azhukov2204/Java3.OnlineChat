<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="357.0" prefWidth="663.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="onlinechat.client.controllers.AuthWindowController">
   <children>
      <TextField fx:id="loginField" layoutX="190.0" layoutY="128.0" onAction="#focusToPasswordField" prefHeight="53.0" prefWidth="383.0">
         <font>
            <Font size="30.0" />
         </font>
      </TextField>
      <Label layoutX="36.0" layoutY="134.0" prefHeight="53.0" prefWidth="140.0" text="Логин:">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label layoutX="36.0" layoutY="205.0" prefHeight="53.0" prefWidth="140.0" text="Пароль:">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordField" layoutX="190.0" layoutY="205.0" onAction="#doAuthentication" prefHeight="53.0" prefWidth="383.0">
         <font>
            <Font size="30.0" />
         </font></PasswordField>
      <Button fx:id="enterButton" layoutX="247.0" layoutY="278.0" mnemonicParsing="false" onAction="#doAuthentication" prefHeight="53.0" prefWidth="162.0" text="Войти">
         <font>
            <Font size="30.0" />
         </font>
      </Button>
      <Label layoutX="36.0" layoutY="47.0" prefHeight="65.0" prefWidth="140.0" text="Адрес и порт сервера:" wrapText="true">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <TextField fx:id="serverHostField" layoutX="190.0" layoutY="39.0" onAction="#focusToPasswordField" prefHeight="65.0" prefWidth="287.0" text="localhost">
         <font>
            <Font size="30.0" />
         </font>
      </TextField>
      <TextField fx:id="serverPortField" layoutX="477.0" layoutY="39.0" prefHeight="65.0" prefWidth="96.0" text="8081">
         <font>
            <Font size="28.0" />
         </font></TextField>
      <Label layoutX="120.0" layoutY="102.0" prefHeight="20.0" prefWidth="488.0" text="Если какое-то поле адреса не заполнено, то будет применено значение по-умолчанию" textFill="#ff0808" />
   </children>
</AnchorPane>
